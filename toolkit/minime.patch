+void clear_escape(char * src, size_t src_len, char * dst, size_t dst_len)
+{  
+    regmatch_t pmatch[2];
+    regex_t reg;
+    size_t p_len = 0, q_len = 0;
+    char * p, * q;
+
+    p = src;
+    q = dst;
+
+    if(regcomp(&reg,"^((\x1b\\[[0-9;]*m)|(\x1b\\[K))", REG_EXTENDED) != 0) {
+        return;
+    }
+    
+    while(p_len < src_len && q_len < dst_len) {
+        if(*p == '\x2e' || *p == '\r' || *p == '\n') {
+            p++;
+            p_len ++;
+        } else {
+            if(regexec(&reg, p, 2, pmatch, 0) == 0 && pmatch[1].rm_so == 0) {
+                p += pmatch[1].rm_eo;
+                p_len += pmatch[1].rm_eo;
+            } else {
+                *q = *p;
+                p++;
+                q++;
+                p_len ++;
+                q_len ++;
+            }
+        }
+    }
+
+    regfree(&reg);
+
+}
