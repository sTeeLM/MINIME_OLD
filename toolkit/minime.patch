+static void
+boot_output (ply_boot_splash_plugin_t *plugin,
+                const char               *output, size_t size)
+{
+
+  char dst[8192];
+  char src[1024];
+  size_t length = size > sizeof(src) - 1 ? sizeof(src) - 1 : size;
+  int i;
+  char * token, * str, * saveptr;
+
+  ply_trace("boot_output: size %d output %s\n", size, output);
+
+  memcpy(src, output, length);
+  src[length] = 0;
+
+  for (i = 1, str = src; ; i++, str = NULL) {
+    token = strtok_r(str, "\r\n\x2e", &saveptr);
+    if(token == NULL)
+        break;
+    memset(dst, 0, sizeof(dst));
+    clear_escape(token, size, dst, sizeof(dst) - 1);
+    if(dst[0] == 0) {
+       continue;
+    }
+    pause_displays (plugin);
+    script_lib_plymouth_on_display_boot_message (plugin->script_state,
+                                              plugin->script_plymouth_lib,
+                                              dst);
+    unpause_displays (plugin);
+  }
+
+}
